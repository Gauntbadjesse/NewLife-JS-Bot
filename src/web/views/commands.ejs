<%- include('partials/header', {user: user, isAdmin: typeof isAdmin !== 'undefined' ? isAdmin : false}) %>
  <div class="content-container">
    <div class="page-hero">
      <h1>üìù Command Log</h1>
      <p class="intro-text">Recent commands executed by staff on the server and bot</p>
    </div>

    <div class="table-section">
      <h3>Recent Activity <span class="count"><%= items.length %></span></h3>
      <div class="table-container">
        <% if (items.length === 0) { %>
          <div class="empty-state">
            <h4>No commands logged</h4>
            <p>Commands will appear here as staff execute them</p>
          </div>
        <% } else { %>
          <table>
            <thead>
              <tr>
                <th>User</th>
                <th>Command</th>
                <th>Status</th>
                <th>Time</th>
              </tr>
            </thead>
            <tbody>
              <% items.forEach(function(it){ %>
                <tr>
                  <td>
                    <% if (it.userId) { %>
                      <a href="/user/<%= it.userId %>"><strong><%= it.username || it.userId %></strong></a>
                    <% } else { %>
                      <strong><%= it.username || 'Unknown' %></strong>
                    <% } %>
                  </td>
                  <td class="mono"><%= it.command || it.fullCommand || 'Unknown' %></td>
                  <td>
                    <span class="status <%= it.success ? 'active' : 'danger' %>">
                      <%= it.success ? 'Success' : 'Failed' %>
                    </span>
                  </td>
                  <td class="muted"><%= new Date(it.createdAt || it.executedAt || Date.now()).toLocaleString() %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>
  </div>
<%- include('partials/footer') %>